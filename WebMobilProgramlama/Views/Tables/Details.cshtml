@model WebMobilProgramlama.Models.Table
@{
    ViewBag.Title = "İl Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">İl Detayları</h2>

<div class="card shadow-sm mb-3" style="max-width: 420px;">
    <div class="card-body">
        <h5 class="card-title mb-3">@Model.ilad</h5>
        <p class="card-text"><strong>Plaka Kodu:</strong> @Model.ilplaka</p>
    </div>
</div>

@Html.ActionLink("Düzenle", "Edit",
    new { id = Model.ilplaka }, new { @class = "btn btn-outline-secondary me-2" })
@Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-outline-primary" })
